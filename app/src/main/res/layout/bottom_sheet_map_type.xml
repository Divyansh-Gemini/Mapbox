<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/gridLayoutMapTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:columnCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/select_map_type"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mapTypeStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/street"
                app:drawableTopCompat="@drawable/img_street" />

            <TextView
                android:id="@+id/mapTypeSatellite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/satellite"
                app:drawableTopCompat="@drawable/img_satellite" />

            <TextView
                android:id="@+id/mapTypeHybrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/hybrid"
                app:drawableTopCompat="@drawable/img_hybrid" />

        </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
